{
  "name": "furlon-website",
  "version": "1.0.0",
  "description": "Furlon's website",
  "main": "main.js",
  "scripts": {
    "start": "webpack-dev-server",
    "watch:sass": "node-sass furlon/static/sass/main.scss furlon/static/css/style.css -w",
    "compile:sass": "node-sass furlon/static/sass/main.scss furlon/static/css/style.comp.css",
    "concat:css": "concat -o furlon/static/css/style.concat.css furlon/static/css/icons.css furlon/static/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" furlon/static/css/style.concat.css -o furlon/static/css/style.prefix.css",
    "compress:css": "node-sass furlon/static/css/style.prefix.css furlon/static/css/style.min.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css",
    "build": "webpack --config webpack.config.prod.js"
  },
  "author": "Salaah",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.7.1",
    "clean-webpack-plugin": "^3.0.0",
    "concat": "^1.0.3",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.2",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  }
}
